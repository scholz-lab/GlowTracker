    size_hint: (0.5, 0.5)
    font_size: 18
    halign: 'center'
    

<MyLabel@Label>:
    #size: self.texture_size
    size_hint: (1, 1)
    font_size: 18
    halign: 'center'
    color: '#8e0045ff'
    
    
<MyLogo@Image>:
    keep_ratio: True
    source: 'icons/logoSq.png'
    spacing: -10
    border: 0,0,0,0
    

<OnOffButton@ToggleButton>  
    background_normal: 'icons/connection_off.png'
    background_down: 'icons/connection_on.png'
    
<MyCounter@Label>:
    value: 0

<LabelImage@BoxLayout>:
    orientation: 'vertical'
    image: image
    label: label
    Label:
        id: label
        size_hint: (1, 0.1)
        text: ""
    Image:
        id: image
        keep_ratio: True
        size_hint: (1,0.9)


<WarningPopup>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
			text: root.text
			size_hint_y: 0.9
			halign: 'center'
            valign: 'center'
        Button:
            size_hint_x: 0.25
            size_hint_y: None
			height: sp(48)
            text: root.ok_text
            on_press: root.ok()
